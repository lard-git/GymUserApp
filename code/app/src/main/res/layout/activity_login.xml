<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@color/vivian_background"
    android:gravity="center">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRAIN TRACK"
        android:textColor="@color/vivian_primary_light"
        android:textSize="32sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:layout_marginBottom="48dp" />

    <!-- Login Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="24dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Member Login"
            android:textColor="@color/vivian_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:gravity="center" />

        <!-- UID Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UID"
            android:textColor="@color/vivian_text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/uidInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your UID"
            android:textColor="@color/vivian_text_primary"
            android:textColorHint="@color/vivian_text_secondary"
            android:background="@drawable/edittext_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="24dp"
            android:textSize="16sp" />

        <!-- Full Name Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="@color/vivian_text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/fullNameInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your full name"
            android:textColor="@color/vivian_text_primary"
            android:textColorHint="@color/vivian_text_secondary"
            android:background="@drawable/edittext_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="32dp"
            android:textSize="16sp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="ACCESS GYM"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_gradient"
            android:letterSpacing="0.05"
            android:elevation="4dp" />

    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZenFit Pro"
        android:textColor="@color/vivian_text_secondary"
        android:textSize="12sp"
        android:layout_marginTop="32dp" />

</LinearLayout>